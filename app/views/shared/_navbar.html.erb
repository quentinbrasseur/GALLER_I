<div class="navbar-wagon">
  <!-- Logo -->
  <strong><%= link_to "GALLER-I", root_path, style: "text-decoration: none; font-size:14px; margin: 10px; color: #BE63C1;" %></strong>
  <div class="navbar-right">
    <div class="navbar-wagon-right hidden-xs hidden-sm">

      <!-- <div class="badge-container"> -->
      <%= link_to "Become an Artist", new_artwork_path, style: "text-decoration: none; font-size:14px;; margin: 10px; color: #9F9F9F;" %>
      <!-- </div> -->
      <%= link_to "My appointments", appointments_path, style: "text-decoration: none; font-size:14px; margin: 10px; color: #9F9F9F;" %>

  <!--   <a href="" class="navbar-wagon-item navbar-wagon-link">
      <div class="badge-container">
        <i class="fa fa-envelope-o"></i>
        <div class="badge badge-blue">3</div>
      </div>
    </a> -->

    <!-- Notification link-->
    <!-- Profile picture and dropdown -->
    <% if user_signed_in? %>

      <!-- Notification -->
      <%= link_to  mailbox_inbox_path, class: "navbar-wagon-item navbar-wagon-link" do %>
        <div class="badge-container">
          <i class="fa fa-envelope-o"></i>
          <% @count = current_user.mailbox.inbox(:read => false).count(:id).to_i %>
        <% if  @count > 0%>
          <div class="badge badge-purple"><%= current_user.mailbox.inbox(:read => false).count(:id).to_s%></div>

          <% end %>
        </div>

      <% end %>

    <div class="navbar-wagon-item">
      <div class="dropdown">
        <% avatar_url = current_user.facebook_picture_url || "http://placehold.it/30x30" %>
        <%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><%= link_to "Profile", profile_path(current_user.id), style: "text-decoration: none; font-size:14px;" %></li>
          <li><a href="#">Dashboard</a></li>
          <li><%= link_to "Log Out", destroy_user_session_path, method: :delete, style: "text-decoration: none; font-size:14px; color: #9F9F9F;" %></li>
        </ul>

      </div>
    </div>
    <% else %>
    <%= link_to "Sign up", new_user_registration_path, style: "text-decoration: none; font-size:14px; margin: 10px; color: #9F9F9F;" %>
    <%= link_to "Login", new_user_session_path, style: "text-decoration: none; font-size:14px; margin: 10px; color: #9F9F9F;" %>
    <% end %>

  </div>


  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to "Become an Artist", new_artwork_path, style: "text-decoration: none; font-size:14px;; margin: 10px; color: #9F9F9F;" %></li>
        <li><%= link_to "My requests", appointments_path, style: "text-decoration: none; font-size:14px; margin: 10px; color: #9F9F9F;" %></li>
        <% if user_signed_in? %>
        <li><%= link_to "Messages", mailbox_inbox_path(current_user.username), style: "text-decoration: none; font-size:14px; margin:10px;"%></li>
        <li><%= link_to "Profile", profile_path(current_user.id), style: "text-decoration: none; font-size:14px; margin:10px;"%></li>
        <li><%= link_to "Log Out", destroy_user_session_path, method: :delete, style: "text-decoration: none; font-size:14px; ; margin: 10px; color: #9F9F9F;" %></li>
        <% else %>
        <li><%= link_to "Sign up", new_user_registration_path, style: "text-decoration: none; font-size:14px; margin: 10px; color: #9F9F9F;" %></li>
        <li><%= link_to "Login", new_user_session_path, style: "text-decoration: none; font-size:14px; margin: 10px; color: #9F9F9F;" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

</div>

