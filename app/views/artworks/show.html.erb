<div class="container">
  <div class="row">
    <div class="col-md-6" style="background: blue; padding: 0px; display: flex; justify-content: flex-start;">
        <% if @artwork.photo %>
          <% image =  @artwork.photo.path %>
        <% else  %>
          <% image =  "https://unsplash.com/?photo=-LRuNvY8W7Q" %>
        <% end %>
        <div class="text-center"><img class="text-center" src="<%= cl_image_path(image, height: 300, crop: "scale") %>" alt="sample image"></div>
    </div>
    <div class="col-md-6 text-center" style="background: red;">
      <div class="row" style="background: grey;">
        <h1 style="margin: 0px;"><%= @artwork.title %>,</h1>
        <h5>by <%= @artwork.owner.username %><%= @artwork.owner.first_name %><%= @artwork.owner.last_name %></h5>
      </div>
      <div class="row" style="background: black;">
        <div class="text-center">
          <h3>
            <% if current_user and current_user.venues.any? %>
              <%= render 'form-appt'  %>
            <% else %>
            Please create a venue before booking, here: <%= link_to "Create Venue", new_venue_path %>
            <% end %>
          </h3>
          <h5>
            <%= link_to "Back", artworks_path %>
            <%  if (current_user == @artwork.owner) %>
              <%= link_to "Edit", edit_artwork_path(@artwork) %>
              <%= link_to "Delete", artwork_path(@artwork), method: :delete, data: { confirm: "Are you sure?"}, class: "btn-book-show" %>
            <% end  %>
          </h5>
        </div>
      </div>

    </div>
  </div>

  <div class="row">
    <div class="col-md-12" style="background: green; margin: 20px 0px; padding: 0px">
      <div class="profile-header-wrapper">
        <div class="container profile-header-container text-center" style="padding: 0px;">
          <div class="tabs">
            <a class="tab active" data-target="#overview">
              <h3>Overview</h3>
            </a>
            <a class="tab" data-target="#location">
              <h3>Location</h3>
            </a>
            <a class="tab" data-target="#history">
              <h3>History</h3>
            </a>
          </div>
        </div>
      </div>
      <div class="container" style="margin-bottom: 12px; padding: 0px;">
        <div class="tab-content" id="overview" style="height: 250px; overflow:auto">
            Dimensions:
            <%= @artwork.height %> x
            <%= @artwork.width %> x
            <%= @artwork.depth %>
            <br>
            Weight: <%= @artwork.weight %>kg
            <br>
            City: <%= @artwork.location %>
        </div>
        <div class="tab-content hidden" id="location" style="height: 250px; overflow:auto">
          <div class="text-center" id="map" style="width: auto; height: 200px;"></div>
          <% content_for(:after_js) do %>
            <%= javascript_tag do %>
              $(document).ready(function() {
              var handler = Gmaps.build('Google');
              handler.buildMap({ internal: { id: 'map' } }, function() {
              markers = handler.addMarkers(<%= raw @hash.to_json %>);
              handler.bounds.extendWith(markers);
              handler.fitMapToBounds();
              if (markers.length == 0) {
              handler.getMap().setZoom(2);
              } else if (markers.length == 1) {
              handler.getMap().setZoom(14);
              }
              });
              });
            <% end %>
          <% end %>
        </div>
